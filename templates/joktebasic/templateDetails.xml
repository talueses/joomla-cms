<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>joktebasic</name>
	<creationDate>16 Enero 2012</creationDate>
	<author>Equipo de desarrollo Jokte</author>
	<authorEmail>info@jokte.org</authorEmail>
	<authorUrl>http://www.jokte.org</authorUrl>
	<copyright>Copyright (C) 2012 - 2014 Jokte, todos los derechos reservados.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<version>1.0.0</version>
	<description>TPL_JOKTE_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>fonts</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>topmenu</position>
		<position>manager</position>
		<position>slidemarquee</position>
		<position>copyleft</position>
		<position>bottomenu</position>
		<position>socialnet</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="es-LA">es-LA/es-LA.tpl_joktebasic.ini</language>
		<language tag="es-LA">es-LA/es-LA.tpl_joktebasic.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="logo" class="validate-word" type="text" default="templates/joktebasic/images/joktelogo.png"
					label="TPL_JOKTE_LOGO_LABEL"
					description="TPL_JOKTE_LOGO_DESC"
					filter="text" />
                                        
                                                                        <field name="logourl"  class="validate-word" type="text" default="index.php"
					label="TPL_JOKTE_LOGO_URL_LABEL"
					description="TPL_JOKTE_LOGO_URL_DESC"
					filter="text" />
                                        
                                                                        <field name="slogan"  class="validate-word" type="text" default="El CMS LatinoamericÃ¡no"
					label="TPL_JOKTE_LOGO_SLOGAN_LABEL"
					description="TPL_JOKTE_LOGO_SLOGAN_DESC"
					filter="text" />
			</fieldset>
		</fields>
	</config>
</extension>
